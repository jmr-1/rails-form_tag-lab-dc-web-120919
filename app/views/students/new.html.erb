    <body>
    <h1>Make a new student!</h1>

    <%= form_tag students_path do  %>

        <label>First Name:</label>
        <%= text_field_tag :'student[first_name]' %><br>
        <label>Last Name:</label>
        <%= text_field_tag :'student[last_name]' %><br>
        <%= submit_tag "Submit Student" %>
    <% end %>

    <%= session[:new_form_params] if session[:new_form_params] %>
    <br>
    <%= link_to 'Go back to the list of students', students_path %>
    </body>
</html>